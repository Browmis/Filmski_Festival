<Window x:Class="Festival.windows.BestMovies"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Festival.windows"
        mc:Ignorable="d"
        Title="BestMovies" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <ComboBox HorizontalAlignment="Left" Name="cbYear" Margin="186,36,0,0" VerticalAlignment="Top" Width="120"  SelectionChanged="cbYear_SelectionChanged"/>
        <TextBox HorizontalAlignment="Left" Height="23" IsReadOnly="True" Margin="24,36,0,0" TextWrapping="Wrap" Text="Best movies: " VerticalAlignment="Top" Width="120"/>
        <ListBox HorizontalAlignment="Left" Name="listFilms" Height="253" Margin="208,107,0,0" VerticalAlignment="Top" Width="544"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="24,311,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>




    </Grid>
</Window>
